<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/textViewClearScreen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="Clear screen of all cells?" />

    <Button
        android:id="@+id/buttonClearScreenNo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textViewClearScreen"
        android:layout_below="@+id/textViewClearScreen"
        android:text="No" />

    <Button
        android:id="@+id/buttonClearScreenYes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/buttonClearScreenNo"
        android:layout_alignBottom="@+id/buttonClearScreenNo"
        android:layout_alignRight="@+id/textViewClearScreen"
        android:text="Yes" />

</RelativeLayout>